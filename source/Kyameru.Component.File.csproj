<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Description>Kyameru file component adds file watcher and mover functions to your Kyameru processing chain</Description>
    <Copyright>Giles Papworth 2020</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/djsuperchief/Kyameru</PackageProjectUrl>
    <RepositoryUrl>https://github.com/djsuperchief/Kyameru.Component.File</RepositoryUrl>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Kyameru.Core" Version="0.0.11-beta" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Resources.cs">
      <ExcludeFromSourceAnalysis>True</ExcludeFromSourceAnalysis>
      <ExcludeFromStyleCop>True</ExcludeFromStyleCop>
    </Compile>
  </ItemGroup>
</Project>
